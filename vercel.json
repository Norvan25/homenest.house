{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/(.*)\\.html", "dest": "/$1.html" },
    { "src": "/public/(.*)", "dest": "/public/$1" }
  ]
}
